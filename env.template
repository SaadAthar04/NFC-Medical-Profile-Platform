# App Configuration
NEXT_PUBLIC_APP_NAME=MedGuard
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/medguard

# Authentication (Clerk/Auth0/Supabase)
NEXT_PUBLIC_AUTH_DOMAIN=your-auth-domain.com
AUTH_SECRET=your-secret-key-here

# Stripe Payment
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# AWS Configuration
AWS_REGION=ca-central-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=medguard-documents

# Email Service (Postmark/Resend)
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@medguard.com

# Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_QR_CODE=true

# Admin
ADMIN_EMAIL=admin@medguard.com

